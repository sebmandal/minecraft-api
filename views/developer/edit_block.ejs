<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<%- include("../partials/head.ejs") %>
		<title>MC API</title>
	</head>
	<body>
		<%- include("../partials/nav.ejs") %>
		<div class="container bg-light py-3">
			<h2 class="text-center">Editing <%= block.name %></h2>
			<form class="" action="/dashboard/edit_block/<%= block.minecraftName.slice(10) %>" method="post">

                <div class="form-group mb-3">
                    <label for="name">Name</label>
                    <input required name="name" type="text" class="form-control" value="<%= block.name %>" />
                </div>

                <div class="form-group mb-3">
                    <label for="minecraftName">Minecraft name</label>
                    <input required name="minecraftName" type="text" class="form-control" value="<%= block.minecraftName %>" />
                </div>

                <div class="form-group mb-3">
                    <label for="imageUrl">Image URL</label>
                    <input required name="imageUrl" type="text" class="form-control" value="<%= block.imageUrl %>" />
                </div>

                <div class="form-group mb-3">
                    <label for="legacyID">Legacy ID</label>
                    <input required name="legacyID" type="text" class="form-control" value="<%= block.legacyID %>" />
                </div>

                <div class="form-group mb-3">
                    <label for="introduced">Introduced in version:</label>
                    <input required name="introduced" type="text" class="form-control" value="<%= block.introduced %>" />
                </div>

                <div class="form-group mb-3">
                    <input type="checkbox" class="form-check-input" name="overworld" <% if (block.naturalSpawns.naturalSpawnInOverworldDimension === true) { %>
                    checked
                    <% } %> />
                    <label for="overworld">Natural spawning in the overworld</label>
                    <br />
                    <input type="checkbox" class="form-check-input" name="nether" <% if (block.naturalSpawns.naturalSpawnInNetherDimension) { %>
                    checked
                    <% } %> />
                    <label for="nether">Natural spawning in the nether</label>
                    <br />
                    <input type="checkbox" class="form-check-input" name="end" <% if (block.naturalSpawns.naturalSpawnInEndDimension) { %>
                    checked
                    <% } %> />
                    <label for="end">Natural spawning in the end</label>
                </div>

                <div class="form-group mb-3">
                    <label for="defaultDrop">Default drop</label>
                    <input required name="defaultDrop" type="text" class="form-control" value="<%= block.drops.defaultDrop %>" />
                </div>
                
                <div class="form-group mb-3">
                    <label for="silkTouchDrop">Silk touch drop</label>
                    <input required name="silkTouchDrop" type="text" class="form-control" value="<%= block.drops.silkTouchDrop %>" />
                </div>

                <div class="form-group mb-3">
                    <input type="checkbox" class="form-check-input" name="affectedByFortune" <% if (block.drops.dropAffectedByFortune) { %>
                    checked
                    <% } %> />
                    <label for="affectedByFortune">Affected by fortune</label>
                </div>

                <div class="form-group mb-3">
                    <label for="solidity">Solidity</label>
                    <select class="form-control" name="solidity">
                        <option <% if (block.solidity === "solid") { %>
                    selected
                    <% } %>>Solid</option>
                        <option <% if (block.solidity === "liquid") { %>
                    selected
                    <% } %>>Liquid</option>
                        <option <% if (block.solidity === "vacant") { %>
                    selected
                    <% } %>>Vacant</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="width">Width</label>
                    <input
                    required
                    name="width"
                    type="number" step="0.01"
                    class="form-control"
                    value="<%= block.hitbox.width %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="length">Length</label>
                    <input
                    required
                    name="length"
                    type="number" step="0.01"
                    class="form-control"
                    value="<%= block.hitbox.length %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="height">Height</label>
                    <input
                    required
                    name="height"
                    type="number" step="0.01"
                    class="form-control"
                    value="<%= block.hitbox.height %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="hardness">Hardness</label>
                    <input
                    required
                    name="hardness"
                    type="number" step="0.01"
                    class="form-control"
                    value="<%= block.stats.hardness %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="resistance">Blast Resistance</label>
                    <input
                        required
                        name="resistance"
                        type="number" step="0.01"
                        class="form-control"
                        value="<%= block.stats.resistance %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="opacity">Opacity</label>
                    <input
                        required
                        name="opacity"
                        type="number" step="0.01"
                        class="form-control"
                        value="<%= block.stats.opacity %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="luminance">Luminance</label>
                    <input
                        required
                        name="luminance"
                        type="number" step="0.01"
                        class="form-control"
                        value="<%= block.stats.luminance %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="minimumXP">Min XP on break</label>
                    <input
                        required
                        name="minimumXP"
                        type="number" step="0.01"
                        class="form-control"
                        value="<%= block.minimumExperienceOnBreak %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="maximumXP">Max XP on break</label>
                    <input
                        required
                        name="maximumXP"
                        type="number" step="0.01"
                        class="form-control"
                        value="<%= block.maximumExperienceOnBreak %>"
                    ></input>
                </div>

                <div class="form-group mb-3">
                    <label for="tooldata">Tool data</label>
                    <pre><textarea
                        required
                        name="tooldata"
                        type="text"
                        class="autogrow form-control"
                        style="resize: none;"
                    ><%= JSON.stringify(block.toolData, null, 4) %></textarea></pre>
                </div>

                <div class="form-group my-3">
                    <input type="checkbox" class="form-check-input" name="removed" <% if (block.removed) { %>
                    checked
                    <% } %> />
                    <label for="removed">Removed</label>
                    <br />
                    <input type="checkbox" class="form-check-input" name="slippery" <% if (block.stats.slippery) { %>
                    checked
                    <% } %> />
                    <label for="slippery">Slippery</label>
                    <br />
                    <input type="checkbox" class="form-check-input" name="flammable" <% if (block.stats.flammable) { %>
                    checked
                    <% } %> />
                    <label for="flammable">Flammable</label>
                    <br />
                    <input type="checkbox" class="form-check-input" name="catchesFireFromLava" <% if (block.stats.catchesFireFromLava) { %>
                    checked
                    <% } %> />
                    <label for="catchesFireFromLava">Catches fire from lava</label>
                    <br />
                    <input type="checkbox" class="form-check-input" name="brokenByWater" <% if (block.stats.brokenByWater) { %>
                    checked
                    <% } %> />
                    <label for="brokenByWater">Broken by water</label>
                    <br />
                    <input type="checkbox" class="form-check-input" name="interactive" <% if (block.stats.interactive) { %>
                    checked
                    <% } %> />
                    <label for="interactive">Interactive</label>
                </div>
    
                <input type="submit" value="Upload" class="btn btn-secondary" />
            </form>
		</div>
		<%- include("../partials/footer.ejs") %>
	</body>
</html>
