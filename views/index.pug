		.row
		// Desktop View
		.d-none.d-md-flex.row
			.col-12.mb-3
				h2 Contributors
			.col-6
				h3
					| @
					a.text-reset(href='https://github.com/sebmandal') sebmandal
				p Systems engineering
			.col-6
				h3
					| @
					a.text-reset(href='https://github.com/LucasJoel1') LucasJoel1
				p Data gathering
			.col-6
				img.w-50(src='/img/sebmandal.png', alt='sebmandal_character')
			.col-6
				img.w-50(src='/img/DragonLord25.png', alt='DragonLord25_character')
